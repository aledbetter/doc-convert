    <filter-name>GzipFilter</filter-name>
    <filter-class>org.eclipse.jetty.servlets.GzipFilter</filter-class>
    <init-param>
      <param-name>mimeTypes</param-name>
      <param-value>text/html,application/xhtml+xml,application/xml,text/plain,text/xml,text/css,application/x-javascript,application/javascript</param-value>
    </init-param>
    <init-param>
      <param-name>methods</param-name>
